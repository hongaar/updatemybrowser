{
  "private": true,
  "name": "root",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "start": "lerna run clean:cache && lerna run start --parallel",
    "start:studio": "lerna run start --scope @umb/studio",
    "start:web": "lerna run start --scope @umb/web",
    "build": "lerna run build",
    "deploy:studio": "lerna run deploy:studio",
    "deploy:gql": "lerna run deploy:gql",
    "clean": "lerna clean",
    "clean:cache": "lerna run clean:cache",
    "test": "lerna run test"
  },
  "devDependencies": {
    "lerna": "^3.14.1",
    "rimraf": "^2.6.3"
  }
}
